    "inputs": [
      "collectionStats",
      "contentType",
      "urgency",
      "hasVideo",
      "hasInfographics",
      "viewport",
      "placement"
    ],
    "scoring": "weighted",
    "rules": [
      {
        "if": { "placement": "hero_top", "urgency": "high" },
        "prefer": ["hero.split", "hero.overlay", "live.stream"],
        "boost": 0.35
      },
      {
        "if": { "hasVideo": true },
        "prefer": ["media.video_reel", "spotlight.media"],
        "boost": 0.3
      },
      {
        "if": { "placement": "between_all_and_murqap" },
        "prefer": ["ticker.inline", "timeline.vertical", "infographic.statbar"],
        "boost": 0.2
      },
      {
        "if": { "contentType": "opinion" },
        "prefer": ["opinion.column", "news_list.summary"],
        "boost": 0.25
      },
      {
        "if": { "viewport": "mobile", "hasImages": true },
        "prefer": ["news_grid.two_col", "timeline.horizontal"],
        "boost": 0.15
      },
      {
        "if": { "viewport": "desktop", "hasImages": true },
        "prefer": ["news_grid.masonry", "mosaic.magazine"],
        "boost": 0.2
      },
      {
        "if": { "urgency": "high", "placement": "in_stream" },
        "prefer": ["ticker.inline", "live.stream"],
        "boost": 0.3
      },
      {
        "if": { "placement": "sidebar_primary" },
        "prefer": ["spotlight.card", "timeline.vertical", "tag_strip.chips"],
        "boost": 0.18
      },
      {
        "if": { "placement": "sidebar_secondary" },
        "prefer": ["newsletter.block", "media.podcast_row", "native.story"],
        "boost": 0.15
      }
    ],
    "fallback": "news_list.basic"
  }
